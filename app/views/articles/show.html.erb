<p id="notice"><%= notice %></p>
<div class="article-section container">
  <article class="article">
    <h2> <%= @article.title %> </h2>
       <div class="article-image" style="background-image:url(<%= @article.image %>); background-size:cover; background-repeat: no-repeat;">
        <p class="article-category">  <%= link_to @article.category.name, category_path(@article.category) %> </p>
       </div>

        <p class="article-votes"> 
          <span class="author">By: <%= @article.author.name %> </span>
          <span> <i class="fas fa-heart"></i> <%= @article.votes.size %> </span>
          <span class="posted-time"> <i class="fas fa-clock"></i> <%= article_date(@article) %> </span>
          <span class="votes">
            <% if @vote %>                     
                <a rel="nofollow" data-method="delete" href="<%= article_vote_path(id: @vote.id, article_id: @article.id) %>"> <i class="fas fa-heart"></i>Unvote</a>
            <% else %>
                <a rel="nofollow" data-method="post" href="<%= article_votes_path(article_id: @article.id)%>"> <i class="far fa-heart"></i>Vote</a>
            <% end %>                 
            
          </span>
        </p>

        <p class="article-text"> <%= @article.text %> </p>

        <% if current_user == @article.author %>
          <%= link_to 'Edit Article', edit_article_path(@article) %> 
        <% end %>
  </article>

  <section class="popular-articles-sidebar">    
        <article class="popular-articles">
          <h2> Most Popular </h2>
          <% @most_popular.each do |article| %> 
              <div class="popular-item">   
                <div class="popular-image" style="background-image:url(<%= article.image %>); background-size:cover; background-repeat: no-repeat;">                     
                </div>
                <div class="popular-info">
                  <%= link_to article.title, article_path(article) %>
                  <p class="popular-votes"> 
                    <span class="author">By: <%= @article.author.name %> </span>
                    <span class="posted-time"> <span> . </span> <%= article_date(@article) %> </span>
                  </p>
                </div>
              </div>
          </a>
          <%end%>
        </article>
  </section>

  
</div>



